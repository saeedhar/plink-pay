datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model KybOption {
  id        String   @id @default(cuid())
  category  String   // 'purpose_of_account' | 'business_activity' | 'annual_revenue'
  label     String
  code      String?
  order     Int      @default(0)
  active    Boolean  @default(true)
  locale    String   @default("en")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([category, locale, order])
}
